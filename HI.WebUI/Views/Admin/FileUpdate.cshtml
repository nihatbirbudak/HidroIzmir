@model ProductChangeViewModel
@{
    ViewData["Title"] = "Admin Home Page";
    ViewData["Description"] = "Admin Home Page";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<div class="col-md-12">
    <div class="box">
        @if (Model.ImagePaths.Count == 0)
        {
            <div class="box-header">
                <h2>Resimler</h2>
                <small>GÖrsel bulunamadı..</small>
            </div>
        }
        else
        {
            <div class="box-header">
                <h2>@Model.Product.Name Görselleri</h2>
                <small>Sitede bu ütüne ait yayınlana tüm görseller burda gözükmekte kaldırmak istediğinz görselin üzerindeki isl butonuna tıklayarak kaldırabilirsiniz.</small>
            </div>
            <div class="box-divider m-0"></div>
            <div class="box-body">
                <div class="row">
                    @foreach (var item in Model.ImagePaths)
                    {
                        <div class="col-xs-4 col-sm-3 col-md-2">
                            <div class="box p-a-xs">
                                <a href="#"><img src="~/assets/images/ProductImages/@item.Path" alt="" class="img-thumbnail"></a>
                                <div class="p-a-sm">
                                    <div class="text-ellipsis"><a asp-action="FileDelete" asp-route-id="@item.Id" class="btn btn-danger btn-sm text-white"><i class="fa fa-close"></i>Sil</a></div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            
        }
    </div>
</div>

<div class="col-md-12">
    <div class="box">
        <div class="box-header">
            <h2>Resim Yükleme</h2>
            <small>Ürün ile ilgili tüm fotografları yüklemek için aşağıdaki formu kullanabilirsiniz.</small>
        </div>
        <div class="box-divider m-0"></div>
        <div class="box-body">
            <form asp-action="FileUpdate" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputFile">Dosyalar</label>
                    <input type="file" name="file" id="exampleInputFile" class="form-control" multiple>
                    <p class="help-block">Birden fazla dosya seçerek yükleme yapabilirsiniz.</p>
                </div>
                <button type="submit" value="submit" class="btn btn-primary m-b"><i class="fa fa-upload"></i>Yükle</button>
            </form>
        </div>
    </div>
</div>


