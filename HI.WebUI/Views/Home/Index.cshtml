@model IndexViewModel
@{
    ViewData["Title"] = "Hidro İzmir - Anasayfa";
    ViewData["Description"] = "Hidro izmir Hidrolik sistemler";
    ViewData["Keywords"] = "hidrolik, izmir hirolik, pnömatik, hidrolik uygulamlar, hidrolik sistemler,hidrolik pompa,hidrolik presler,hidrolik piston,hidrolik pnömatik,hidrolik hortum,hidrolik piston fiyatları,hidrolik pompa fiyatları";
}

<!--Main Slider-->
<section class="main-slider">

    <div class="tp-banner-container">
        <div class="tp-banner">
            <ul>

                <li data-transition="fade" data-slotamount="1" data-masterspeed="1000" data-thumb="images/main-slider/@Model.Sliders[0].ImageName" data-saveperformance="off" data-title="Awesome Title Here">
                    <img src="images/main-slider/@Model.Sliders[0].ImageName" alt="" data-bgposition="center top" data-bgfit="cover" data-bgrepeat="no-repeat">

                    <!--Overlay-->
                    <div class="overlay-style-one"></div>

                    <div class="tp-caption sfl sfb tp-resizeme"
                         data-x="left" data-hoffset="15"
                         data-y="center" data-voffset="-110"
                         data-speed="1500"
                         data-start="0"
                         data-easing="easeOutExpo"
                         data-splitin="none"
                         data-splitout="none"
                         data-elementdelay="0.01"
                         data-endelementdelay="0.3"
                         data-endspeed="1200"
                         data-endeasing="Power4.easeIn">
                        <div class="border-title">@Model.Sliders[0].Title</div>
                    </div>

                    <div class="tp-caption sfl sfb tp-resizeme"
                         data-x="left" data-hoffset="15"
                         data-y="center" data-voffset="10"
                         data-speed="1500"
                         data-start="500"
                         data-easing="easeOutExpo"
                         data-splitin="none"
                         data-splitout="none"
                         data-elementdelay="0.01"
                         data-endelementdelay="0.3"
                         data-endspeed="1200"
                         data-endeasing="Power4.easeIn">
                        <h2>@Model.Sliders[0].Content <br />@Model.Sliders[0].Content2 </h2>
                    </div>

                    <div class="tp-caption sfr sfb tp-resizeme"
                         data-x="left" data-hoffset="15"
                         data-y="center" data-voffset="125"
                         data-speed="1500"
                         data-start="1000"
                         data-easing="easeOutExpo"
                         data-splitin="none"
                         data-splitout="none"
                         data-elementdelay="0.01"
                         data-endelementdelay="0.3"
                         data-endspeed="1200"
                         data-endeasing="Power4.easeIn">
                        <a href="@Model.Sliders[0].Link1" class="theme-btn btn-style-one">@Model.Sliders[0].LinkName1</a> &ensp;&ensp; <a href="@Model.Sliders[0].Link2" class="theme-btn btn-style-two">@Model.Sliders[0].LinkName2</a>
                    </div>


                </li>

                <li data-transition="fade" data-slotamount="1" data-masterspeed="1000" data-thumb="images/main-slider/@Model.Sliders[1].ImageName" data-saveperformance="off" data-title="Awesome Title Here">
                    <img src="images/main-slider/@Model.Sliders[1].ImageName" alt="" data-bgposition="center top" data-bgfit="cover" data-bgrepeat="no-repeat">

                    <!--Overlay Style Two-->
                    <div class="overlay-style-two"></div>

                    <div class="tp-caption sfl sfb tp-resizeme"
                         data-x="right" data-hoffset="-15"
                         data-y="center" data-voffset="-80"
                         data-speed="1500"
                         data-start="0"
                         data-easing="easeOutExpo"
                         data-splitin="none"
                         data-splitout="none"
                         data-elementdelay="0.01"
                         data-endelementdelay="0.3"
                         data-endspeed="1200"
                         data-endeasing="Power4.easeIn">
                        <div class="subtitle-text">@Model.Sliders[1].Title</div>
                    </div>

                    <div class="tp-caption text-right sft sfb tp-resizeme"
                         data-x="right" data-hoffset="-15"
                         data-y="center" data-voffset="0"
                         data-speed="1500"
                         data-start="0"
                         data-easing="easeOutExpo"
                         data-splitin="none"
                         data-splitout="none"
                         data-elementdelay="0.01"
                         data-endelementdelay="0.3"
                         data-endspeed="1200"
                         data-endeasing="Power4.easeIn">
                        <h2>@Model.Sliders[1].Content <br /> @Model.Sliders[1].Content2</h2>
                    </div>

                    <div class="tp-caption sfr sfb tp-resizeme"
                         data-x="right" data-hoffset="-15"
                         data-y="center" data-voffset="100"
                         data-speed="1500"
                         data-start="1000"
                         data-easing="easeOutExpo"
                         data-splitin="none"
                         data-splitout="none"
                         data-elementdelay="0.01"
                         data-endelementdelay="0.3"
                         data-endspeed="1200"
                         data-endeasing="Power4.easeIn">
                        <a href="@Model.Sliders[1].Link1" class="theme-btn btn-style-one">@Model.Sliders[1].LinkName1</a>
                    </div>

                </li>

                <li data-transition="fade" data-slotamount="1" data-masterspeed="1000" data-thumb="images/main-slider/@Model.Sliders[2].ImageName" data-saveperformance="off" data-title="Awesome Title Here">
                    <img src="images/main-slider/@Model.Sliders[2].ImageName" alt="" data-bgposition="center top" data-bgfit="cover" data-bgrepeat="no-repeat">

                    <!--Overlay Style Three-->
                    <div class="overlay-style-three"></div>

                    <div class="tp-caption sfl sfb tp-resizeme"
                         data-x="center" data-hoffset="0"
                         data-y="center" data-voffset="-100"
                         data-speed="1500"
                         data-start="0"
                         data-easing="easeOutExpo"
                         data-splitin="none"
                         data-splitout="none"
                         data-elementdelay="0.01"
                         data-endelementdelay="0.3"
                         data-endspeed="1200"
                         data-endeasing="Power4.easeIn">
                        <div class="subtitle-text">@Model.Sliders[2].Title</div>
                    </div>

                    <div class="tp-caption text-center sft sfb tp-resizeme"
                         data-x="center" data-hoffset="0"
                         data-y="center" data-voffset="-20"
                         data-speed="1500"
                         data-start="0"
                         data-easing="easeOutExpo"
                         data-splitin="none"
                         data-splitout="none"
                         data-elementdelay="0.01"
                         data-endelementdelay="0.3"
                         data-endspeed="1200"
                         data-endeasing="Power4.easeIn">
                        <h2>@Model.Sliders[2].Content <br /> @Model.Sliders[2].Content2</h2>
                    </div>

                    <div class="tp-caption sfr sfb tp-resizeme"
                         data-x="center" data-hoffset="0"
                         data-y="center" data-voffset="90"
                         data-speed="1500"
                         data-start="1000"
                         data-easing="easeOutExpo"
                         data-splitin="none"
                         data-splitout="none"
                         data-elementdelay="0.01"
                         data-endelementdelay="0.3"
                         data-endspeed="1200"
                         data-endeasing="Power4.easeIn">
                        <a href="@Model.Sliders[2].Link1" class="theme-btn btn-style-one">@Model.Sliders[2].LinkName1</a>
                    </div>


                </li>

            </ul>

            <div class="tp-bannertimer"></div>
        </div>
    </div>
</section>
<!--Main Slider End-->

<!--services-column-->
<section class="services-column-two">
    <div class="auto-container">

        <!--Section Title-->
        <div class="sec-title-one">
            <h2>Hizmelerimiz</h2>
            <div class="text">Öne çıkan hizmelerimiz.</div>
        </div>
        <div class="row clearfix">

            @foreach (var item in Model.Products)
            {
                <!--Service block two-->
                <div class="service-block-two col-md-4 col-sm-6 col-xs-12">
                    <div class="inner-box wow fadeIn" data-wow-delay="0ms" data-wow-duration="1500ms">
                        <div class="image-box">
                            <figure class="image"><a href="services-details.html"><img src="~/images/ProductImages/@item.HomePageImageName" alt=""></a></figure>
                        </div>
                        <div class="lower-content">
                            <div class="text twoLinesTruncate">@item.Content1</div>
                            <div class="link-box"><a asp-action="ProductDetail" asp-route-id="@item.Id" class="theme-btn normal-link">İncele<span class="fa fa-long-arrow-right"></span></a></div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!--services-column End-->

<!--Gallery Section-->
<section class="gallery-section">
    <div class="auto-container">
        <!--Carousel Outer-->
        <div class="carousel-outer">
            <div class="gallery-carousel">

                @foreach (var item in Model.Dealers)
                {
                    <!--Gallery Item-->
                    <div class="gallery-item">
                        <div class="inner-box">
                            <div class="image-box">
                                <img alt="@item.Name" src="images/Bayilik-logo/@item.ImageName">
                            </div>
                        </div>
                    </div>
                }
                
            </div>
        </div><!--End Carousel Outer-->
    </div>
</section>

<!--Newsletter Style One-->
<div class="newsletter-style-one" style="background-image:url(images/background/newsletter-bg.png);">
    <div class="auto-container">
        <div class="sec-title-two">
            <h2>Biz Size Ulaşalım</h2>
        </div>

        <div class="newsletter-form">
            <form asp-action="ContactAddIndex" method="post">
                <div class="row clearfix">

                    <div class="col-lg-10 col-md-9 col-sm-12 col-xs-12">
                        <div class="row clearfix">
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group">
                                    <input asp-for="@Model.Contact.Name" type="text" name="name" value="" placeholder="Ad Soyad" required>
                                </div>
                            </div>

                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group">
                                    <input asp-for="@Model.Contact.Email" type="email" name="email" value="" placeholder="Email Adresi" required>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group">
                                    <input asp-for="@Model.Contact.Phone"type="text" name="phone" value="" placeholder="Telefon Numaranız" required>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-2 col-md-3 col-sm-12 col-xs-12">
                        <div class="form-group button-group">
                            <button type="submit" class="btn-style-three theme-btn">Gönder</button>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
